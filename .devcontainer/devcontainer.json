// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/debian
{
  "name": "Go",
  // Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
  "build": {
    "dockerfile": "./Dockerfile",
    "cacheFrom": [
      "type=registry,ref=ghcr.io/techarohq/anubis/devcontainer"
    ]
  },
  "runArgs": [
    "--network",
    "host"
  ],
  "features": {
    "ghcr.io/xe/devcontainer-features/yoke:latest": {},
    "ghcr.io/devcontainers/features/kubectl-helm-minikube:1": {},
    "ghcr.io/audacioustux/devcontainers/k9s:1": {},
    "ghcr.io/devcontainers-extra/features/kubectx-kubens:1": {}
  },
  // Use 'forwardPorts' to make a list of ports inside the container available locally.
  // "forwardPorts": [],
  // Configure tool-specific properties.
  // "customizations": {},
  // Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
  // "remoteUser": "root"
  "onCreateCommand": "go mod download",
  "initializeCommand": "mkdir -p ${localEnv:HOME}${localEnv:USERPROFILE}/.kube",
  "mounts": [
    {
      "type": "bind",
      "source": "${localEnv:HOME}${localEnv:USERPROFILE}/.kube",
      "target": "/home/vscode/.kube"
    }
  ]
}